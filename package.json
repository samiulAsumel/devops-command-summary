{
  "name": "devops-command-reference",
  "version": "2.0.0",
  "description": "Enterprise-grade DevOps Command Reference Web Application",
  "main": "index.html",
  "scripts": {
    "start": "python scripts/app.py",
    "dev": "python scripts/app.py --debug",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss assets/styles.css -o assets/styles.min.css",
    "build:js": "terser assets/scripts.js -o assets/scripts.min.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint assets/scripts.js --fix",
    "lint:css": "stylelint assets/styles.css --fix",
    "format": "prettier --write .",
    "docker:build": "docker build -t devops-command-reference:latest .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "security:audit": "npm audit",
    "performance:audit": "lighthouse http://localhost:5000 --output=json --output-path=./reports/lighthouse-report.json",
    "validate:html": "html-validate *.html",
    "validate:accessibility": "pa11y *.html --reporter json",
    "deploy:staging": "docker-compose -f docker-compose.staging.yml up -d",
    "deploy:production": "docker-compose -f docker-compose.production.yml up -d"
  },
  "keywords": [
    "devops",
    "linux",
    "cloud",
    "commands",
    "reference",
    "enterprise",
    "production",
    "documentation"
  ],
  "author": "MD. Samiul Alam Sumel",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/samiulsumel/devops-command-reference.git"
  },
  "bugs": {
    "url": "https://github.com/samiulsumel/devops-command-reference/issues"
  },
  "homepage": "https://github.com/samiulsumel/devops-command-reference#readme",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "html-validate": "^8.9.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.3.0",
    "pa11y": "^7.0.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.0.3",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "terser": "^5.24.0"
  },
  "dependencies": {
    "bootstrap": "^5.3.2",
    "chart.js": "^4.4.0",
    "highlight.js": "^11.9.0",
    "lunr": "^2.3.9"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ]
}
